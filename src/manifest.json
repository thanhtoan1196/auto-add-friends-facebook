{
  "manifest_version": 2,
  "name": "Add friends on Facebook",
  "description": "Extension auto add friends on facebook",
  "version": "1.0.0",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "content_scripts": [{
    "matches": ["https://*.facebook.com/groups/*/members/", "https://www.facebook.com/?sk=ff"],
    "js": ["js/tools.js"]
  }],
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "permissions": ["storage", "activeTab", "tabs", "notifications"]
}